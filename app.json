{
  "expo": {
    "name": "LabourLink",
    "slug": "labourlink",
    "scheme": "labourlink",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/labourlink-app-icon-safe.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zakariyahage.labourlink",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/labourlink-app-icon-safe.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.zakariyahage.labourlink"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-notifications",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Labour-link to access your photos so you can choose a company logo."
        }
      ]
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "7fe5713f-643b-491d-98b6-45eff7ab53c1"
      }
    }
  }
}
